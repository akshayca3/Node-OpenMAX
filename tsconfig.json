{
  "version": "1.8.5",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist"
  },
  "filesGlob": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples"
  ]
}
